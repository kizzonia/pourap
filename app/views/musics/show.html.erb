<div class="technology">
<div class="container">
  <div class="col-md-9 technology-left">
    <div class="agileinfo">

    <h2 class="w3"><%= @music.songname %></h2>
    <div class="single">
       <%= image_tag @music.albumimage.url(:medium) %>
        <div class="b-bottom">
          <h5 class="top"><%= raw(@music.subtitle) %></h5>
         <p class="sub"><%= raw(@music.discription) %>.</p>
         <div class="tex-center">
           <p class="sub">
            
             <div id="jquery_jplayer_1" class="jp-jplayer"></div>
                         <div id="jp_container_1" class="jp-audio" role="application" aria-label="media player">
                             <div class="jp-type-playlist">
                                 <div class="jp-gui jp-interface">
                                     <div class="jp-controls">
                                         <button class="jp-previous" tabindex="0"><i class="fa fa-step-backward"></i></button>
                                         <button class="jp-play" tabindex="0"></button>
                                         <button class="jp-next" tabindex="0"><i class="fa fa-step-forward"></i></button>
                                     </div>
                                     <button class="player-toggle"><i class="fa fa-music"></i></button>
                                     <div class="jp-progress">
                                         <div class="jp-seek-bar">
                                             <div class="jp-play-bar"></div>
                                         </div>
                                     </div>
                                     <div class="jp-volume-controls hidden-xs">
                                         <button class="jp-volume-max" tabindex="0"><i class="fa fa-volume-up"></i></button>
                                         <div class="jp-volume-bar">
                                             <div class="jp-volume-bar-value"></div>
                                         </div>
                                     </div>
                                     <div class="jp-time-holder hidden-xs">
                                         <div class="jp-current-time" role="timer" aria-label="time">&nbsp;</div>
                                         <div class="jp-duration" role="timer" aria-label="duration">&nbsp;</div>
                                     </div>
                                     <div class="jp-toggles">
                                         <button class="jp-repeat" tabindex="0"><i class="fa fa-repeat"></i></button>
                                         <button class="jp-shuffle" tabindex="0"><i class="fa fa-random"></i></button>
                                         <button class="jp-list"><i class="fa fa-list-ul"></i></button>
                                     </div>
                                 </div>
                                 <div class="jp-playlist">
                                     <ul>
                                         <li>&nbsp;</li>
                                     </ul>
                                 </div>
                             </div>
                         </div>
</p>
</div>
         <p class"sub" ><%= raw(@music.discography) %> </p>
         <p class="sub"> <%= @music.published %> </p>
      </div>
     </div>

     <script type="text/javascript">
     //<![CDATA[
     $(document).ready(function(){

     	$("#jquery_jplayer_1").jPlayer({
     		ready: function (event) {
     			$(this).jPlayer("setMedia", {
     				title: "<%= @music.songname %>",
            mp3: "<%= @music.song.url %>",
     				m4a: "<%= @music.song.url %>",
     				oga: "<%= @music.song.url %>"

     			});
     		},
     		swfPath: "/js",
     		supplied: "m4a, mp3",
     		wmode: "window",
     		useStateClassSkin: true,
     		autoBlur: false,
     		smoothPlayBar: true,
     		keyEnabled: true,
     		remainingDuration: true,
     		toggleDuration: true
     	});
     });
     //]]>
     </script>
