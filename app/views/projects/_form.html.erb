<%= simple_form_for(@project, url: projects_path, html: { class: 'form-horizontal' }) do |f| %>


<div class="form-group">
  <%= f.input :name, class: "form-control", placeholder: "Project Name" %>
</div>

<div class="form-group">
  <%= f.input :owner, class: "form-control", placehlder: "Project Owner" %>
</div>

<div class="form-group">
  <%= f.input :link, class: "form-control", placeholder: "Project Link" %>
</div>

<div class="form-group">
  <%= f.input :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.submit :submit, class: "btn btn-success" %>
</div>


<% end %>
