<div class="technology">
  <div class="container">
    <div class="col-md-9 technology-left">
      <div class="agileinfo">

        <h2 class="w3"><%= @video.title %></h2>
        <div class="single">
          <div id="player-wrapper"></div>
          <div class="col-md-6">
            <div class="yt_video thumbnail">
              <%= image_tag "https://img.youtube.com/vi/#{@video.uid}/mqdefault.jpg", alt: @video.title,
              class: 'yt_preview img-rounded', :"data-uid" => @video.uid %>

              <div class="caption">
                <h5><%= @video.title %></h5>

              </div>
            </div>
            <div class="b-bottom">
              <h5 class="top">SubStory: <%= raw(@video.description) %></h5>
              <br>
              <p class="sub"><%= raw(@video.story) %>.</p>
            </div>

          </div>
        </div>
      </div>
      <br>

      <br>


      <div class="soci">
        <ul>
          <%= link_to like_video_path, method: :put do %>
          <li class="hvr-rectangle-out"><%= fa_icon "thumbs-o-up", class: "btn btn-default btn-sm" %>(<%= @video.get_upvotes.size %>)</li><% end %>
          <%= link_to dislike_video_path, method: :put do %>
          <li class="hvr-rectangle-out"><%= fa_icon "thumbs-o-down", class: "btn btn-default btn-sm" %> (<%=@video.get_downvotes.size %>)</li><% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
