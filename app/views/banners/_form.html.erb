<%= simple_form_for(@banner) do |f| %>
  <%= f.error_notification %>

    <div class="form-group">
        <%= f.input :thumbnail, as: :file, paceholder: "Add display picture", class: "form-control" %>
      </div>

    <div class="form-group">
    <%= f.input :qoute, placeholder: "Add Your Qoutes here", as: :ckeditor, input_html: { ckeditor: { toolbar: 'Full' } }  %>
  </div>

  <div class="form-group">
    <%= f.input :qouter, Placeholder: " WHo owns the qoute" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
