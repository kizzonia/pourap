  <div class="panel-heading">Log in</div>
				<div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.input :email, required: false, autofocus: true, class: "form-control", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= f.input :password, required: true, autofocus: true, class: "form-control", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-group ">
                <%= f.button :submit, "Log in", class: "btn btn-default col-md-12" %>
              </div>
              <% end %>
            </fieldset>
              <% if user_signed_in? %>
              <%= render "devise/shared/links" %>
              <% else %>
              <p> Want to be a blogger? Contact Admin For A Slot </p>
              <% end %>
            </div>
