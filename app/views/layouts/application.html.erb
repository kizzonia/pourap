<!DOCTYPE html>
<html>
  <head>
    <title>Pourap</title>
      <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://www.google.com/jsapi' %>
    <%= javascript_include_tag 'https://www.youtube.com/iframe_api' %>

    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
      <script>
   new WOW().init();
  </script>
  </head>

  <body>

    <% flash.each do |key, value| %>
   <div id="notice" class="col-md-6 col-md-offset-3">
     <div  class="alert alert-<%= key %>" role="alert">
      <svg class="glyph stroked empty-message"><use xlink:href="#stroked-empty-message"></use></svg> <%= value %> <a href="#" class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
    </div>
  </div>
  <% end %>
    <%= render 'shared/header' %>

    <div class="color">
    <%= yield %>
  </div>
    <%= render "shared/footer" %>
  </body>
</html>
