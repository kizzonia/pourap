
<div class=" banner ">
	<div class="cover">
		<div class="container">
			<div class="col-md-12 cover-qoute">
				<% @banners.each do |banner| %>
				<div class=" col-md-4 col-sm-4 col-xs-4 cimg">
					<%= image_tag banner.thumbnail.url(:medium), class: 'img-responsive img-rounded' %>
				</div>

				<div class="col-md-8 col-sm-6 col-xs-6  ctext">
					<h4 class: "text-center" style="color:#fff;">" <%= banner.qoute %> " </h4>
					<p class="text-center" style="font-size:16px; color:#fff;"> <%=banner.qouter %> </p>
				</div>
				<% end %>
			</div>

		</div>
	</div>
</div>
