
<% @events.each do |event| %>

 <div class="tc-ch wow fadeInDown"  data-wow-duration=".8s" data-wow-delay=".2s">
    <div class="single col-md-12 col-xs-12">
      <%= image_tag event.thumbnail.url, class: "img-responsive " %>
    </div>
    <br>
    <h3><%= link_to event.title, event %></h3>
    <h6>Posted at <%= event.created_at.strftime("%b, %d, %y") %></h6>
      <%= raw(event.shortDescription)%>
      <P> Project Location: <%= event.location %></P>
      <p> Will be aired at <%= event.eventDate %></p>

      <div class="bht1">
        <%= link_to "Continue Reading", event %>
      </div>

      <div class="soci">
        <ul>
          <li class="hvr-rectangle-out"><a class="fb" href="https://www.facebook.com/pourapkreyol/"></a></li>
        </ul>
      </div>
      <div class="clearfix"></div>
</div>

<div class="clearfix"></div>
  <% end %>
